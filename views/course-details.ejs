<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Course Details - My Academy</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <%- include('partials/navbar') %>

  <section class="container my-5">
    <h2 class="text-center mb-4">Course Details</h2>

    <% courses.forEach(course => { %>
      <div class="card shadow-sm p-4 mb-4">
        <h3><%= course.name %></h3>
        <p><%= course.description %></p>
        <ul>
          <li>Duration: <%= course.duration %></li>
          <li>Mode: <%= course.mode %></li>
          <li>Certification: <%= course.certification %></li>
        </ul>
        <a href="/courses" class="btn btn-primary mt-3">Back to Courses</a>
      </div>
    <% }) %>

  </section>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>